package Smartphone;
import java.util.Scanner;

public class SmartPhoneMain {
    public static void main(String[] args) {
        SmartPhone phone = new SmartPhone();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("=== 스마트폰 주소록 ===");
            System.out.println("1. 연락처 추가");
            System.out.println("2. 연락처 전체 조회");
            System.out.println("3. 연락처 검색");
            System.out.println("4. 연락처 삭제");
            System.out.println("5. 연락처 수정");
            System.out.println("6. 종료");
            System.out.print("메뉴 선택: ");
            int choice = Integer.parseInt(scanner.nextLine());

            switch (choice) {
                case 1:
                    phone.addAddr(phone.inputAddrData());
                    break;
                case 2:
                    phone.printAllAddr();
                    break;
                case 3:
                    System.out.print("검색할 이름: ");
                    String searchName = scanner.nextLine();
                    phone.searchAddr(searchName);
                    break;
                case 4:
                    System.out.print("삭제할 이름: ");
                    String deleteName = scanner.nextLine();
                    phone.deleteAddr(deleteName);
                    break;
                case 5:
                    System.out.print("수정할 이름: ");
                    String editName = scanner.nextLine();
                    phone.editAddr(editName);
                    break;
                case 6:
                    System.out.println("프로그램을 종료합니다.");
                    scanner.close();
                    return;
                default:
                    System.out.println("올바른 번호를 입력해주세요.\n");
            }
        }
    }
}