package Smartphone;
import java.util.Scanner;

public class SmartPhoneMain {
	public static void main(String[] args) {
        SmartPhone smartPhone = new SmartPhone();
        Scanner scanner = new Scanner(System.in);

        while (true) {

            System.out.print("#데이터 2개를 입력합니다.");
            String choice = scanner.nextLine();

            switch (choice) {
                case "1":
                    Addr newAddr = smartPhone.inputAddrData();
                    smartPhone.addAddr(newAddr);
                    break;
                case "2":
                    smartPhone.printAllAddr();
                    break;
                case "3":
                    System.out.print(": ");
                    String searchName = scanner.nextLine();
                    smartPhone.searchAddr(searchName);
                    break;
                case "4":
                    System.out.print("전화번호: ");
                    String deleteName = scanner.nextLine();
                    smartPhone.deleteAddr(deleteName);
                    break;
                case "5":
                    System.out.print("수정할 이름을 입력하세요: ");
                    String editName = scanner.nextLine();
                    smartPhone.editAddr(editName);
                    break;
                case "6":
                    System.out.println("프로그램을 종료합니다.");
                    scanner.close();
                    return;
                default:
                    System.out.println("잘못된 입력입니다. 다시 선택해주세요.");
                    
                    System.out.println("주소관리메뉴 --------------------");
                    System.out.println("1. 연락처 등록");
                    System.out.println("2. 모든 연락처 출력");
                    System.out.println("3. 연락처 검색");
                    System.out.println("4. 연락처 삭제");
                    System.out.println("5. 연락처 수정");
                    System.out.println("6. 프로그램 종료");
                    System.out.println("--------------------------------");
            }
        }
    }
}